{
  "name": "bso-ui",
  "version": "1.0.52",
  "private": true,
  "dependencies": {
    "@dataesr/react-dsfr": "0.7.7",
    "@datapunt/matomo-tracker-react": "^0.5.1",
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "env-cmd": "^10.1.0",
    "highcharts": "^9.1.0",
    "highcharts-react-official": "^3.0.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-copy-to-clipboard": "^5.0.4",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.32.0",
    "react-intl": "^5.20.1",
    "react-markdown": "^7.1.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "4.0.3",
    "react-share": "^4.4.0",
    "sanitize-html": "^2.5.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.3.0",
    "stylelint": "^13.13.1",
    "stylelint-scss": "^3.19.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:staging": "env-cmd -f .env.staging react-scripts build",
    "test": "react-scripts test",
    "prepare": "husky install",
    "eject": "react-scripts eject",
    "lint": "eslint --fix src/**/*.js",
    "prettier": "prettier --write **/*.js",
    "stylelint": "stylelint --fix **/*.scss",
    "deploy:patch": "git checkout main && git pull origin main --rebase --tags && git merge origin staging && npm version patch && git push origin main --tags",
    "deploy:minor": "git checkout main && git pull origin main --rebase --tags && git merge origin staging && npm version minor && git push origin main --tags",
    "deploy:major": "git checkout main && git pull origin main --rebase --tags && git merge origin staging && npm version major && git push origin main --tags"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.+(js)": [
      "eslint --fix"
    ],
    "src/**/*.{js,json,md}": [
      "prettier --write"
    ],
    "src/**/*.scss": [
      "stylelint"
    ]
  }
}
